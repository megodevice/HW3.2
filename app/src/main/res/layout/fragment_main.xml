<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".MainFragment">

    <TextView
        android:id="@+id/text_view_count"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"/>

    <Button
        android:backgroundTint="@color/green"
        android:id="@+id/button_plus"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/plus_symbol"
        android:textSize="34sp"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_height="wrap_content"/>

    <Button
        android:backgroundTint="@color/green"
        android:id="@+id/button_minus"
        android:textSize="34sp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/minus_symbol"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:textSize="20sp"
        android:text="@string/next_fragment"
        app:layout_constraintTop_toBottomOf="@id/button_plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:id="@+id/next_fragment_button" />

</androidx.constraintlayout.widget.ConstraintLayout>